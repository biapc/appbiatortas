<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".DetalheTorta1Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:adjustViewBounds="true"
            android:padding="45dp"
            android:src="@drawable/logo"/>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v4.view.ViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/textView_descricao_titulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/texto_titulo_torta_1"
                    android:fontFamily="@font/little_days"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="#008577"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/textView_descricao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/texto_descricao_torta_1"
                    android:gravity="center"
                    android:fontFamily="@font/little_days"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:textColor="#ffffff"/>

                <TextView
                    android:id="@+id/textView_tamrendval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/texto_tamrendval_torta"
                    android:fontFamily="@font/little_days"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="#008577"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/textView_valores"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/little_days"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/texto_valores_torta_1"
                    android:textColor="#ffffff"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button_contactar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonshapecolor"
                    android:text="@string/botao_contactar"
                    android:textAlignment="center"
                    android:layout_margin="15dp"
                    android:textColor="#ffffff"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>